{
  "name": "openspec-vscode",
  "displayName": "OpenSpec VSCode",
  "description": "VS Code extension for OpenSpec spec-driven development workflow",
  "version": "1.2.0",
  "publisher": "AngDrew",
  "repository": {
    "type": "git",
    "url": "https://github.com/AngDrew/openspec-vscode.git"
  },
  "homepage": "https://github.com/AngDrew/openspec-vscode#readme",
  "bugs": {
    "url": "https://github.com/AngDrew/openspec-vscode/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openspec",
          "title": "OpenSpec",
          "icon": "media/openspec-icon.svg"
        }
      ]
    },
    "views": {
      "openspec": [
        {
          "id": "openspecExplorer",
          "name": "OpenSpec Explorer",
          "when": "openspec:initialized"
        },
        {
          "id": "openspecWelcome",
          "name": "OpenSpec",
          "when": "!openspec:initialized"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "openspecWelcome",
        "contents": "OpenSpec workspace not detected\n[Initialize OpenSpec](command:openspec.init)\n\nLearn more about [OpenSpec](https://github.com/sst/opencode)",
        "when": "!openspec:initialized"
      }
    ],
    "commands": [
      {
        "command": "openspec.viewDetails",
        "title": "OpenSpec: View Details",
        "icon": "$(search)"
      },
      {
        "command": "openspec.init",
        "title": "OpenSpec: Initialize",
        "icon": "$(rocket)"
      },
      {
        "command": "openspec.applyChange",
        "title": "Apply Change",
        "icon": "$(check)"
      },
      {
        "command": "openspec.ffChange",
        "title": "Fast-Forward Change",
        "icon": {
          "light": "media/fast-forward-light.svg",
          "dark": "media/fast-forward-dark.svg"
        }
      },
      {
        "command": "openspec.archiveChange",
        "title": "OpenSpec: Archive Change",
        "icon": "$(archive)"
      },
      {
        "command": "openspec.opencode.startServer",
        "title": "OpenSpec: Start OpenCode Server",
        "icon": {
          "light": "media/opencode-logo-light.svg",
          "dark": "media/opencode-logo-dark.svg"
        }
      },
      {
        "command": "openspec.opencode.openUi",
        "title": "OpenSpec: Open OpenCode UI",
        "icon": "$(link-external)"
      },
      {
        "command": "openspec.opencode.newChange",
        "title": "OpenSpec: New Change (OpenCode)",
        "icon": "$(add)"
      },
      {
        "command": "openspec.opencode.generateRunnerScript",
        "title": "OpenSpec: Generate Runner Script"
      },
      {
        "command": "openspec.opencode.runRunnerAttached",
        "title": "OpenSpec: Run Runner Attached"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "openspec.opencode.startServer",
          "when": "view == openspecExplorer && openspec:initialized",
          "group": "navigation@1"
        },
        {
          "command": "openspec.opencode.openUi",
          "when": "view == openspecExplorer && openspec:initialized",
          "group": "navigation@2"
        },
        {
          "command": "openspec.opencode.newChange",
          "when": "view == openspecExplorer && openspec:initialized",
          "group": "navigation@3"
        },
        {
          "command": "openspec.init",
          "when": "view == openspecWelcome && !openspec:initialized",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "openspec.applyChange",
          "when": "view == openspecExplorer && viewItem == change:active",
          "group": "inline"
        },
        {
          "command": "openspec.ffChange",
          "when": "view == openspecExplorer && viewItem == change:active:scaffold",
          "group": "inline"
        },
        {
          "command": "openspec.archiveChange",
          "when": "view == openspecExplorer && (viewItem == change:active || viewItem == change:active:scaffold)",
          "group": "inline"
        }
      ]
    },
    "keybindings": []
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w",
    "pretest": "npm run compile && npm run lint && tsc -p ./tsconfig.test.json",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/test/runTest.js",
    "test:compile": "tsc -p ./ && npm run test"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "jsdom": "^27.0.1",
    "mocha": "^10.2.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "marked": "^5.0.0"
  }
}
