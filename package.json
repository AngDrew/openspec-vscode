{
  "name": "openspec-vscode",
  "displayName": "OpenSpecCodeExplorer",
  "description": "VS Code extension for OpenSpec spec-driven development workflow",
  "version": "1.3.0",
  "publisher": "AngDrew",
  "repository": {
    "type": "git",
    "url": "https://github.com/AngDrew/openspec-vscode.git"
  },
  "homepage": "https://github.com/AngDrew/openspec-vscode#readme",
  "bugs": {
    "url": "https://github.com/AngDrew/openspec-vscode/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:openspec.chat.open",
    "onView:openspecChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openspec",
          "title": "OpenSpec",
          "icon": "media/openspec-icon.png"
        }
      ]
    },
    "views": {
      "openspec": [
        {
          "id": "openspecExplorer",
          "name": "OpenSpec Explorer",
          "when": "openspec:initialized"
        },
        {
          "id": "openspecWelcome",
          "name": "OpenSpec",
          "when": "!openspec:initialized"
        },
        {
          "id": "openspecChat",
          "name": "OpenSpec Chat",
          "when": "openspec:initialized && openspec:chatEnabled",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "openspecWelcome",
        "contents": "OpenSpec workspace not detected\n[Initialize OpenSpec](command:openspec.init)\n\nLearn more about [OpenSpec](https://github.com/sst/opencode)",
        "when": "!openspec:initialized"
      }
    ],
    "commands": [
      {
        "command": "openspec.viewDetails",
        "title": "OpenSpec: View Details",
        "icon": "$(search)"
      },
      {
        "command": "openspec.init",
        "title": "OpenSpec: Initialize",
        "icon": "$(rocket)"
      },
      {
        "command": "openspec.applyChange",
        "title": "Apply Change",
        "icon": "$(check)"
      },
      {
        "command": "openspec.ffChange",
        "title": "Fast-Forward Change",
        "icon": {
          "light": "media/fast-forward-light.svg",
          "dark": "media/fast-forward-dark.svg"
        }
      },
      {
        "command": "openspec.archiveChange",
        "title": "OpenSpec: Archive Change",
        "icon": "$(archive)"
      },
      {
        "command": "openspec.opencode.startServer",
        "title": "OpenSpec: Start OpenCode Server",
        "icon": {
          "light": "media/opencode-logo-light.svg",
          "dark": "media/opencode-logo-dark.svg"
        }
      },
      {
        "command": "openspec.opencode.openUi",
        "title": "OpenSpec: Open OpenCode UI",
        "icon": "$(link-external)"
      },
      {
        "command": "openspec.opencode.newChange",
        "title": "OpenSpec: New Change (OpenCode)",
        "icon": "$(add)"
      },
      {
        "command": "openspec.opencode.generateRunnerScript",
        "title": "OpenSpec: Generate Runner Script"
      },
      {
        "command": "openspec.opencode.runRunnerAttached",
        "title": "OpenSpec: Run Runner Attached"
      },
      {
        "command": "openspec.chat.open",
        "title": "OpenSpec: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "openspec.chat.messageSent",
        "title": "OpenSpec: Send Chat Message"
      },
      {
        "command": "openspec.chat.cancelStreaming",
        "title": "OpenSpec: Cancel Streaming"
      },
      {
        "command": "openspec.chat.newChange",
        "title": "OpenSpec: New Change (Chat)"
      },
      {
        "command": "openspec.chat.fastForward",
        "title": "OpenSpec: Fast Forward (Chat)"
      },
      {
        "command": "openspec.chat.apply",
        "title": "OpenSpec: Apply Change (Chat)"
      },
      {
        "command": "openspec.chat.archive",
        "title": "OpenSpec: Archive Change (Chat)"
      },
      {
        "command": "openspec.debug.exportLogs",
        "title": "OpenSpec: Export Debug Logs"
      },
      {
        "command": "openspec.debug.toggle",
        "title": "OpenSpec: Toggle Debug Mode"
      },
      {
        "command": "openspec.debug.showOutput",
        "title": "OpenSpec: Show Debug Output"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "openspec.opencode.startServer",
          "when": "view == openspecExplorer && openspec:initialized",
          "group": "navigation@1"
        },
        {
          "command": "openspec.opencode.openUi",
          "when": "view == openspecExplorer && openspec:initialized",
          "group": "navigation@2"
        },
        {
          "command": "openspec.opencode.newChange",
          "when": "view == openspecExplorer && openspec:initialized",
          "group": "navigation@3"
        },
        {
          "command": "openspec.init",
          "when": "view == openspecWelcome && !openspec:initialized",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "openspec.applyChange",
          "when": "view == openspecExplorer && viewItem == change:active",
          "group": "inline"
        },
        {
          "command": "openspec.ffChange",
          "when": "view == openspecExplorer && viewItem == change:active:no-tasks",
          "group": "inline"
        },
        {
          "command": "openspec.archiveChange",
          "when": "view == openspecExplorer && (viewItem == change:active || viewItem == change:active:no-tasks)",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "openspec.chat.open",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "openspec:initialized"
      },
      {
        "command": "openspec.chat.messageSent",
        "key": "enter",
        "when": "openspec:chatFocus && !openspec:inputEmpty"
      },
      {
        "command": "openspec.chat.cancelStreaming",
        "key": "escape",
        "when": "openspec:streaming"
      }
    ],
    "configuration": {
      "title": "OpenSpec",
      "properties": {
        "openspec.chat.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the chat UI feature for OpenSpec workflow"
        },
        "openspec.chat.autoStartServer": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start OpenCode server when opening chat"
        },
        "openspec.chat.maxMessages": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 500,
          "description": "Maximum number of messages to store in chat history"
        },
        "openspec.chat.streamingEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming responses from AI"
        },
        "openspec.chat.showToolCalls": {
          "type": "boolean",
          "default": true,
          "description": "Show tool call panel in chat interface"
        },
        "openspec.chat.showTimestamps": {
          "type": "boolean",
          "default": true,
          "description": "Show timestamps on chat messages"
        },
        "openspec.debug.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for detailed logging"
        },
        "openspec.debug.structuredLogging": {
          "type": "boolean",
          "default": true,
          "description": "Use structured JSON format when exporting logs"
        },
        "openspec.offlineMode.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable offline mode to queue messages when server is unavailable"
        },
        "openspec.offlineMode.maxQueueSize": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 100,
          "description": "Maximum number of messages to queue when offline"
        },
        "openspec.offlineMode.retryInterval": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Interval in seconds between offline retry attempts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w",
    "pretest": "npm run compile && npm run lint && tsc -p ./tsconfig.test.json",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/test/runTest.js",
    "test:compile": "tsc -p ./ && npm run test"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "jsdom": "^27.0.1",
    "mocha": "^10.2.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "marked": "^5.0.0"
  }
}
